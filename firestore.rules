rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ‚úÖ GALER√çA (fotos): lectura p√∫blica, escritura bloqueada
    match /gallery/{document=**} {
      allow read: if true;
      allow write: if false;
    }

    // ‚úÖ NOTICIAS: lectura p√∫blica, escritura bloqueada
    match /news/{document=**} {
      allow read: if true;
      allow write: if false;
    }

    // ‚úÖ CONTENIDO: lectura p√∫blica
    match /content/{document=**} {
      allow read: if true;
      allow write: if false;
    }

    // ‚úÖ RUTAS DE LA WEB: lectura p√∫blica
    match /router/{document=**} {
      allow read: if true;
      allow write: if false;
    }

    // üö´ TODO LO DEM√ÅS: completamente bloqueado
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
